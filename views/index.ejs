<%- include('partials/header') %>
<%- include('partials/navbarhome') %>




<div class="container mt-4">

    <div class="row row-cols-1 row-cols-md-4">

        <% products.forEach(product=>{ %>
        <div class="col mb-4">
            <div class="card text-center">
                <a href="/admin/products/detail/<%= product.id %> ">
                    <img width="180px" height="160px"
                        src="https://s3-sa-east-1.amazonaws.com/arquivosgraficas/midia/1FCAA7EC-0F65-43C2-A490-98C9F1E65A6A/servicos/FEF8E7DE-A295-4B3F-B9B6-D4BBAA62AA95.jpg"
                        class="card-img-top"></a>
                <div class="card-body">
                    <p class="card-title">
                        <%= product.nome %> </p>
                    <p style="margin-bottom: 0%; text-align: left;">Ref: <%= product.codRef %> </p>
                    <p style="margin-bottom: 0%; text-align: left;">Ref: <%= product.tamSangria %> </p>
                    <p style="margin-bottom: 0%; text-align: left;">Ref: <%= product.tamFinal %> </p>
                    <p style="margin-bottom: 0%; text-align: left;">Ref: <%= product.material %> </p>

                    <div class="card-text mt-2">
                        <a href="" class="btn btn-warning btn-sm" data-toggle="tooltip" data-placement="top"
                            title="Baixar gabarito">Baixar Gabarito</a>
                        <a href="/admin/products/detail/<%= product.id %> " data-toggle="tooltip" data-placement="top"
                            title="Ver detalhes" class="btn btn-primary btn-sm">Detalhes</a>
                    </div>
                </div>
            </div>
        </div>
        <%}) %>

    </div>

</div>

<%- include('partials/footer') %>