<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/producao.css">
</head>

<body>
    <%- include('../../partials/navbaradmin') %>
        <div class="boards">
            <div class="board">
                <h3>Aguardando</h3>
                <div class="dropzone">
                    <% itens.forEach(item=>{%>
                        <% if(item.pedido.status=='AGUARDANDO_PRODUCAO'){%>
                            <div class="card" draggable="true">
                                <div class="status green"></div>
                                <div class="content">
                                    <a href="" class="btn btn-danger btn-sm mt-3 mr-3" style="float: right;">Cancelar</a>
                                    <img src="<%= item.produto.imagem %>" alt="" height="100" width="200">
                                    <hr>
                                    <span>Pedido nº <%= item.pedido.id%></span><br>
                                    <span class="text-center">
                                        <%= item.pedido.cliente.nome %>
                                    </span><br>
                                    <span>
                                        <%= item.produto.nome %>
                                    </span>
                                    <a href="/uploads/<%= item.arquivo %>" class="btn btn-primary btn-sm mt-3 mr-3 form-control">Baixar Arquivo</a>
                                </div>
                            </div>
                        <%} %>                         
                    <%}) %>
                </div>
            </div>

            <div class="board">
                <h3>Produzindo</h3>
                <div class="dropzone">
                    <% itens.forEach(item=>{%>
                        <% if(item.pedido.status=='PRODUZINDO'){%>
