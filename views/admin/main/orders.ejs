<%- include('../../partials/header') %>
<%- include('../../partials/navbaradmin') %>

<div class="container mt-3">

    <div class="row">
        <div class="input-group col-md-6 mb-3">
            <input id="cliente" name="cliente" type="text" class="form-control form-control-sm"
                placeholder="Buscar cliente">
            <div class="input-group-append">
                <btn class="btn btn-outline-secondary btn-sm" id="btnBuscar" name="btnBuscar">Buscar</a>
            </div>
        </div>
        <div class="col offset-md-4">
            <a href="/admin/products/register" id="btnNovoProduto" class="btn btn-primary btn-sm">Novo Pedido</a>
        </div>
    </div>


    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Cliente</th>
                <th>Status</th>
                <th>Valor</th>
                <th class="text-center">Ação</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(clt => {%>

            <% clt.pedidos.forEach(pdds=>{%>
            <tr>

                <td>
                    <a href="#">
                        <h6 data-id="<%= clt.id %>" onclick="onClick(event)">Pedido: <%= clt.id %></h6>
                    </a>
                </td>
                <td>
                    <h6><%= clt.nome %></h6>
                </td>
                <td>
                    <h6><%= pdds.status %></h6>
                </td>
                <td>
                    <h6><%= pdds.total %></h6>
                </td>
                <td>
                    <div class="text-center">                        
                        <a href="" title="Ver Pedido" data-target="#exampleModal"><i class="material-icons">visibility</i></a>
                        <a href="" title="Ver Pedido"><i class="material-icons">add_shopping_cart</i></a>
                        <a href="" title="Ver Pedido"><i class="material-icons">check_circle_outline</i></a>
                    </div>
                </td>
            </tr>
            <%}) %>



            <%}); %>

        </tbody>
    </table>

</div>

<%- include('../../partials/footer') %>

<script src="/js/ajax.js"></script>
<script>
    let cliente = document.getElementById('cliente')

    document.getElementById('btnBuscar').addEventListener('click', () => {
        document.location.href = cliente.value ? cliente.value : 'all'
    })

</script>