<%- include('../../partials/header') %>
<%- include('../../partials/navbaradmin') %>

<div class="container mt-3">

    <div class="row">
        <div class="input-group col-md-6 mb-3">
            <input id="cliente" name="cliente" type="text" class="form-control form-control-sm"
                placeholder="Buscar cliente">
            <div class="input-group-append">
                <btn class="btn btn-outline-secondary btn-sm" id="btnBuscar" name="btnBuscar">Buscar</a>
            </div>
        </div>
    </div>


    <table class="table table-hover">
        <thead>
            <tr>
                <th>Pedido</th>
                <th>Cliente</th>
                <th>Status</th>
                <th>Valor</th>
                <th class="text-center">Ação</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(clt => {%>

            <% clt.pedidos.forEach(pdds=>{%>
            <tr>
                <td>
                    <a href="#">
                        <h6 data-id="<%= clt.id %>" onclick="onClick(event)"><%= pdds.id %></h6>
                    </a>
                </td>
                <td>
                    <h6><%= clt.nome %> <a href="#" data-toggle="tooltip" title="Analisar Comprovante" class="btn btn-sm btn-primary">Analisar Comprovante <i class="fas fa-sticky-note"></i></a></h6>
                </td>
                <td>
                    <h6><%= pdds.status %></h6>
                </td>
                <td>
                    <h6><%= parseFloat(pdds.total).toLocaleString('pt-br',{style:'currency',currency:'brl'}) %></h6>
                </td>
                <td>
                    <div>
                        <div class="row">
                            <div class="col-md-3">
                                <form action="/order/resume/" method="POST">
                                    <input type="hidden" name="idOrder" value="<%= pdds.id %>">
                                    <input data-toggle="tooltip" data-placement="top" title="Ver Ficha"
                                        data-target="#exampleModal" type="submit" class="btn btn-danger btn-sm"
                                        value="Ver Ficha">
                                </form>                                
                            </div>
                        </div>
                        
                    </div>
                </td>
            </tr>
            <%}) %>



            <%}); %>

        </tbody>
    </table>

</div>

<%- include('../../partials/footer') %>

<script src="/js/ajax.js"></script>
<script>
    let cliente = document.getElementById('cliente')

    document.getElementById('btnBuscar').addEventListener('click', () => {
        document.location.href = cliente.value ? cliente.value : 'all'
    })

</script>