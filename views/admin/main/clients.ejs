<%- include('../../partials/header') %>
<%- include('../../partials/navbaradmin') %>

<div class="container mt-3">

    <div class="row">
        <div class="input-group col-md-6 mb-3">
            <input id="cliente" name="cliente" type="text" class="form-control form-control-sm"
                placeholder="Buscar cliente">
            <div class="input-group-append">
                <btn class="btn btn-outline-secondary btn-sm" id="btnBuscar" name="btnBuscar">Buscar</a>
            </div>
        </div>
    </div>


    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Cnpj/Cpf</th>
                <th>email</th>
                <th class="text-center">Ação</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(clt => {%>

            <tr>
                <td>
                    <h6><%= clt.nome %></h6>
                </td>
                <td>
                    <h6><%= clt.cnpjCpf %></h6>
                </td>
                <td>
                    <h6><%= clt.email %></h6>
                </td>
                <td>
                    <div class="text-center">
                        <a href="" title="Ver Pedido" data-target="#exampleModal"><i
                                class="material-icons">visibility</i></a>
                        <a href="" title="Ver Pedido"><i class="material-icons">add_shopping_cart</i></a>
                        <a href="" title="Ver Pedido"><i class="material-icons">check_circle_outline</i></a>
                    </div>
                </td>
            </tr>

            <%}); %>

        </tbody>
    </table>

</div>

<%- include('../../partials/footer') %>

<script src="/js/ajax.js"></script>

<script>
   
    let cliente = document.getElementById('cliente')

    document.getElementById('btnBuscar').addEventListener('click', () => {
        document.location.href = cliente.value ? cliente.value : 'all'
    })

</script>