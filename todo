PORCENTAGEM DESCONTO PRODUCT
let quantidade = 500;
let valorPadrao = 50;
let propriedadeDivisao = 100;
let contAuxiliar = 1
let porcentagemDesc = 0.5

let realPorcentagem = porcentagemDesc/100 * valorPadrao

for(i=propriedadeDivisao;i<quantidade;i+=propriedadeDivisao){

let vlrVenda = (contAuxiliar*valorPadrao)-(realPorcentagem*contAuxiliar);
  
  if(i>propriedadeDivisao){
  
		console.log('Quant: '+i+ ' Valor: '+vlrVenda.toLocaleString('pt-br',{style:'currency',currency:'BRL'}))
	}else{
		console.log('Quant: '+i+ ' Valor: '+valorPadrao.toLocaleString('pt-br',{style:'currency',currency:'BRL'}))
	}
  
  contAuxiliar++;
}
